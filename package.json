{
  "name": "render-dir",
  "version": "1.0.0",
  "description": "Copies ('renders') files from srcdir -> dstdir, with transformation & filtering, with a promised interface.",
  "keywords": [
    "dir",
    "walk",
    "render",
    "template",
    "generate",
    "generator"
  ],
  "author": "Shishir Ramam",
  "repository": "tufan-io/render-dir",
  "license": "Apache-2.0",
  "private": false,
  "engines": {
    "node": ">=6.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "docs"
  ],
  "scripts": {
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "staged-mods-ok": "git-mods --staged_ok",
    "no-mods": "git-mods",
    "clean": "rimraf build .nyc_output coverage",
    "clean:dist": "rimraf dist",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "compile:build": "tsc",
    "compile:dist": "tsc -p tsconfig.dist.json",
    "compile:watch": "tsc -w",
    "sh": "npm-sh",
    "secure": "nsp check",
    "check": "npm outdated",
    "check-coverage": "nyc check-coverage --lines 95 --functions 95 --branches 95 --statements 95",
    "coveralls-report": "nyc report --reporter=text-lcov | coveralls",
    "test-with-cover": "nyc -r html -r text-summary ava --verbose",
    "test-without-cover": "ava",
    "build": "npm-run-batch",
    "build:dist": "run-batch",
    "build:watch": "cross-env NODE_ENV=production run-batch",
    "pkg-ok": "pkg-ok",
    "precommit": "run-batch",
    "prepush": "run-batch"
  },
  "run-batch": {
    "build": [
      "clean",
      "lint",
      "compile:build",
      "test-with-cover"
    ],
    "build:watch": [
      "compile:watch"
    ],
    "build:dist": [
      "build",
      "check-coverage",
      "clean:dist",
      "compile:dist",
      "pkg-ok"
    ],
    "precommit": [
      "build:dist",
      "staged-mods-ok"
    ],
    "prepush": [
      "build:dist",
      "secure",
      "no-mods"
    ]
  },
  "devDependencies": {
    "@types/circular-json": "^0.1.30",
    "@types/node": "^8.0.46",
    "@types/semver": "^5.3.31",
    "ava": "^0.22.0",
    "commander": "^2.9.0",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.0",
    "cz-conventional-changelog": "^2.0.0",
    "git-mods": "^1.0.7",
    "graceful-fs": "^4.1.11",
    "husky": "^0.14.3",
    "mkdirp": "^0.5.1",
    "node-emoji": "^1.5.1",
    "npm-run-batch": "0.0.6",
    "nsp": "^2.6.3",
    "nyc": "^11.2.1",
    "pkg-ok": "^1.0.1",
    "rimraf": "^2.6.1",
    "tslint": "^5.5.0",
    "typescript": "^2.2.1"
  },
  "dependencies": {
    "awaiting": "^3.0.0",
    "chalk": "^2.2.0",
    "conventional-changelog": "^1.1.6",
    "conventional-changelog-cli": "^1.3.4",
    "file-type": "^7.2.0",
    "parse-git-config": "^1.1.1",
    "runtime-engine-check": "^1.0.0",
    "semver": "^5.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "files": [
      "build/**/test.js",
      "build/**/test/specs/**/*.js"
    ],
    "source": [
      "build/**/*.js"
    ]
  },
  "nyc": {
    "exclude": [
      "build/**/test/**/*.*",
      "build/**/test.js",
      "dist"
    ]
  }
}
